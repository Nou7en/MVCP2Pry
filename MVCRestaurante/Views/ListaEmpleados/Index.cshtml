@model MVCRestaurante.ViewModels.ListaEmpleadosViewModel
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: 'Arial', sans-serif; /* Volver a la fuente Arial */
            background-color: #1c1e22;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .empleados-container {
            max-width: 800px;
            margin: 3cm auto 0;
            background-color: #2c2f34;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
            text-align: center;
        }

        h1 {
            color: #ddd;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #35383d;
        }

        th, td {
            padding: 12px;
            border: 1px solid #444;
            text-align: center;
        }

        th {
            background-color: #555;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #404247;
        }

        #crear-empleado-button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 12px 24px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s;
            border-radius: 5px;
            margin-top: 20px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            outline: none;
        }

            #crear-empleado-button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="empleados-container">
        <h1>Listado de Empleados</h1>

        <table>
            <thead>
                <tr>
                    <th scope="col">Id Usuario</th>
                    <th scope="col">Usuario</th>
                    <th scope="col">Rol</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            @foreach (var item in Model.empleados)
            {
                <tr>
                    <td>@item.IdUsuario</td>
                    <td>@item.NombreUsuario</td>
                    <td>@item.Rol</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <a asp-action="EliminarEmpleado" asp-route-IdUsuario="@item.IdUsuario" class="btn btn-danger">Eliminar<i class="bi bi-trash-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </table>
        <button onclick="location.href='@Url.Action("Crear","ListaEmpleados")'" id="crear-empleado-button">Crear Nuevo Empleado</button>
    </div>
</body>
</html>
