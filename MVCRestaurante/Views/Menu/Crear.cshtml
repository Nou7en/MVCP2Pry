@model Plato
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #333; /* Color de fondo más oscuro */
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .menu-container {
            max-width: 800px; /* Limita el ancho para una mejor visualización */
            margin: 3cm auto 0;
            background-color: #222; /* Color de fondo del menú */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5); /* Sombra más definida */
            text-align: center;
            overflow-x: auto; /* Permite desplazamiento horizontal si es necesario */
        }

        h1 {
            text-align: center;
            color: #fff;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #f2f2f2; /* Cambio del fondo de la tabla */
        }

        th, td {
            padding: 12px; /* Aumenta el espacio alrededor del texto */
            border: 1px solid #444; /* Borde más definido */
            text-align: center;
        }

        th {
            background-color: #000;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #ccc; /* Color de fila alternativo más claro */
        }

        /* Estilos para los botones */
        .form-group {
            margin-bottom: 15px; /* Agrega espacio entre elementos del formulario */
        }

        input[type="text"],
        textarea,
        input[type="submit"],
        a.btn {
            width: 100%;
            padding: 10px;
            border: none; /* Sin borde para un aspecto más limpio */
            border-radius: 5px;
            background-color: #007BFF; /* Color principal del botón */
            color: #fff;
            font-size: 16px;
            margin-bottom: 10px;
            transition: background-color 0.3s;
            cursor: pointer;
            text-decoration: none; /* Quita subrayado en los enlaces */
            display: inline-block;
        }

            input[type="submit"]:hover,
            a.btn:hover {
                background-color: #0056b3; /* Cambio de color al pasar el ratón */
            }

        input[type="text"],
        textarea {
            background-color: #222; /* Color de fondo del texto del formulario */
            border: 1px solid #444; /* Borde */
            padding: 10px;
            border-radius: 5px;
            color: #fff;
        }
    </style>
</head>
<body>

    <form method="post" class="menu-container">

        <div class="form-group">
            <label class="Datos">Nombre:</label>
            <input asp-for="NombrePlato" class="form-control" />
        </div>

        <div class="form-group">
            <label class="Datos">Descripción:</label>
            <textarea asp-for="DescripcionPlato" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label class="Datos">Precio:</label>
            <input asp-for="Precio" class="form-control" />
        </div>

        <div class="row col-6">
            <div class="col-6 col-md-6">
                <input type="submit" class="btn btn-primary" value="Guardar" />
            </div>
            <div class="col-6 col-md-6">
                <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
            </div>
        </div>
    </form>

</body>
</html>
