@model Plato
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #000;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .menu-container {
            max-width: 600px;
            margin: 3cm auto 0;
            background-color: #2c2f34;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        h1 {
            text-align: center;
            color: #fff;
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-top: 15px;
            color: #fff;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #35383d;
        }

        th, td {
            padding: 10px 12px;
            border: 1px solid #ccc;
            text-align: left;
            color: #fff;
        }

        th {
            background-color: #000;
        }

        tr:nth-child(even) {
            background-color: #404247;
        }

        .row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
        }

        .btn {
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 5px;
            color: #fff;
            text-decoration: none;
            transition: background-color 0.3s;
            border: none;
        }

        .btn-outline-secondary {
            background-color: transparent;
            border: 1px solid #6c757d;
        }

            .btn-outline-secondary:hover {
                background-color: #6c757d;
            }

        .btn:hover {
            filter: brightness(1.1);
        }

        .readonly-field {
            background-color: #42474f;
        }
    </style>
</head>
<body>
    <div class="menu-container">
        <h1>Detalle Factura</h1>

        <form method="post">
            <table>
                <tr>
                    <th>Id Factura:</th>
                    <td><input asp-for="IdPlato" class="readonly-field" readonly /></td>
                </tr>
                <tr>
                    <th>Plato:</th>
                    <td><input asp-for="NombrePlato" class="readonly-field" readonly /></td>
                </tr>
                <tr>
                    <th>Descripcion:</th>
                    <td><textarea asp-for="DescripcionPlato" class="readonly-field" readonly></textarea></td>
                </tr>
                <tr>
                    <th>Precio:</th>
                    <td><input asp-for="Precio" class="readonly-field" readonly /></td>
                </tr>
            </table>

            <div class="row">
                <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>

            </div>
        </form>
    </div>
</body>
</html>
